{
  "group": {
    "name": {
      "required": true,
      "uniq": true,
      "regexp": "^[a-zA-Z\\s_-\\d]+$",
      "desc": "Group name"
    },
    "members": {
      "children": "member",
      "desc": "Members id"
    },
    "owner": {
      "instance": "member",
      "desc": "Members id"
    },
    "icon": {}
  },
  "member": {
    "name": {
      "required": true,
      "uniq": true,
      "regexp": "^[a-zA-Z\\s_-\\d\\.]+$",
      "desc": "Member name"
    },
    "group": {
      "parent": "group.members"
    },
    "absents": {
      "children": "absent"
    },
    "icon": {}
  },
  "stat": {
    "key": {
      "required": true,
      "uniq": true      
    },
    "text": {
      "required": true
    }
  },
  "absent": {
    "member": {
      "required": true,
      "uniq": true,      
      "parent": "member.absents"
    },
    "date": {
      "required": true,
      "uniq": true,
      "regexp": "^\\d\\d\\d\\d-\\d\\d-\\d\\d$"
    },
    "stat": {
      "required": true,
      "uniq": true,
      "instance": "stat"
    },
    "start": {
      "required": true,
      "regexp": "^\\d\\d:\\d\\d$"
    },
    "end": {
      "required": true,
      "regexp": "^\\d\\d:\\d\\d$"
    },
    "reason": {
      "regexp": "^[a-zA-Z\\s_-\\d\\.\\,\\'\\\"\\[\\]\\/]*$"
    }
  }
}